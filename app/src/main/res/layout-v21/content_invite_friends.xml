<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_invite_friends"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.internship.droidz.talkin.ui.activity.inviteFriends.InviteFriendsActivity"
    tools:showIn="@layout/activity_invite_friends">


    <TextView
        android:id="@+id/textViewInviteFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="SELECT MEMBERS"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewInviteFriends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewInviteFriends"
        android:layout_above="@+id/buttonInviteFriends" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/buttonInviteFriends"
        style="@style/SignUpButtonStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/signUpButton"
        android:text="SEND"
        android:textColor="@color/white" />


</RelativeLayout>