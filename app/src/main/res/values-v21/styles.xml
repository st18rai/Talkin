<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme">
        <item name="android:statusBarColor">@color/darkGreen</item>
    </style>

    <style name="MainScreenTheme" parent="AppTheme">
        <item name="colorAccent">@color/darkGreen</item>
    </style>

    <style name="SignInButtonStyle">
        <item name="android:colorButtonNormal">#004951</item>
    </style>

    <style name="SignUpButtonStyle">
        <item name="android:colorButtonNormal">#27686f</item>
    </style>

    <style name="SignUpButtonRegStyle">
        <item name="colorButtonNormal">#004951</item>
        <item name="colorAccent">#24a185</item>
    </style>

    <style name="LinkFacebookButtonStyle">
        <item name="colorButtonNormal">#3a579a</item>
        <item name="colorAccent">#3a899d</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="errorAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/errorTextColor</item>
    </style>

</resources>
