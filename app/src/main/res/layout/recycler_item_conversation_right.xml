<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewConversationUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        app:srcCompat="@drawable/userpic_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:layout_marginStart="30dp"
        android:layout_toStartOf="@+id/imageViewConversationUser"
        android:background="@drawable/message_in_background"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/textViewConversationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Veeeeeeeeeeeeeeeeery long message"
            android:layout_marginEnd="32dp"/>

        <LinearLayout
            android:id="@+id/linearLayoutConversation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewConversationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:text="Name" />

            <TextView
                android:id="@+id/textViewConversationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:46"
                android:layout_marginEnd="32dp"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>