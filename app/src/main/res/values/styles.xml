<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme" />

    <style name="SignInButtonStyle">
        <item name="colorButtonNormal">#004951</item>
        <item name="colorAccent">#24a185</item>
    </style>

    <style name="SignUpButtonStyle">
        <item name="colorButtonNormal">#27686f</item>
        <item name="colorAccent">#24a185</item>
    </style>

    <style name="SignUpButtonRegStyle">
        <item name="colorButtonNormal">#004951</item>
        <item name="colorAccent">#24a185</item>
    </style>

    <style name="LinkFacebookButtonStyle">
        <item name="colorButtonNormal">#3a579a</item>
        <item name="colorAccent">#3a899d</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="errorAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/errorTextColor</item>
    </style>

</resources>
