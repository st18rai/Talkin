<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.internship.droidz.talkin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name=".utils.ProcessTimerReceiver" >
            <intent-filter>
                <action android:name="ProcessTimerReceiver" >
                </action>
            </intent-filter>
        </receiver>
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.internship.droidz.talkin.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"></meta-data>
        </provider>
        <activity
            android:name=".mvp.splash.SplashScreen"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvp.login.LoginScreen"
            android:label="@string/sign_in_button">
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="acc74a3f604c40c5664d1d78bf8d9f8874f41986" />

        <activity
            android:name=".mvp.main.MainScreen"
            android:label="@string/title_activity_main_screen"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".mvp.registration.RegistrationScreen"
            android:label="@string/sign_up_button">
        </activity>
    </application>

</manifest>